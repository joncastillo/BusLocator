<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ID_OverlayRight"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:alpha="0.95"
            android:background="#A9A9A9"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/ID_Route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:text="XX"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.49" />

            <TextView
                android:id="@+id/Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@Service"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_Trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@Trip"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Stop"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ID_NextStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@NextStop"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Occupancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Occupancy"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_Occupancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@Occupancy"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <TextView
                android:id="@+id/Congestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Congestion"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_Congestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@Congestion"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BusModel"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_BusModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@BusModel"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AirConditioned"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_AirConditioned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@AirConditioned"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HasWifi"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_HasWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@HasWifi"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wheelchair Access"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ID_HasWheelChair"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text="@HasWheelhairAccess"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark2" />

            <EditText
                android:id="@+id/ID_EditableText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:inputType="text|textPersonName"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ID_FilterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Service"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
